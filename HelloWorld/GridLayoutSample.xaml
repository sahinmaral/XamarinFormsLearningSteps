<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.GridLayoutSample"
             BackgroundColor="Orange">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Text="Row 1 Column 1" Grid.Row="0" Grid.Column="0" BackgroundColor="White"/>
            <Label Text="Row 2 Column 1" Grid.Row="1" Grid.Column="0" BackgroundColor="White"/>
            <Label Text="Row 1 Column 2" Grid.Row="0" Grid.Column="1" BackgroundColor="White"/>
            <Label Text="Row 2 Column 2" Grid.Row="1" Grid.Column="1" BackgroundColor="White"/>
            <Label Text="Row 2 Column 2" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" BackgroundColor="White"/>
        </Grid>

        
    </ContentPage.Content>
</ContentPage>